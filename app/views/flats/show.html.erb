<div class="container mt-4">
  <div class="row">
    <div class="col border-bottom">
      <h1><%= @flat.name %></h1>
      <p><%= @flat.address %></p>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-5 border m-2 p-3">
      <h2 class="text-center">A bit more about this flat...</h2>
      <p><%= @flat.description %></p>
    </div>
    <div class="col-md-5 border m-2 p-3">
      <h2 class="text-center">Book this place</h2>
      <form action="#">
        <div class="row mb-3">
          <div class="col">
            <label for="start-date" class="form-label">From:</label>
            <input type="date" id="start-date" class="form-control" />
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label for="end-date" class="form-label">To:</label>
            <input type="date" id="end-date" class="form-control" />
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-5 border m-2 p-3">
      <h2 class="text-center">Details</h2>
      <div class="row">
        <div class="col">
          <i class="fas fa-users me-1"></i><%= @flat.number_of_guests %> guests
        </div>
      </div>
      <div class="row mt-2">
        <div class="col">
          <i class="fas fa-euro-sign me-1"></i><%= @flat.price_per_night %> per night
        </div>
      </div>
    </div>
    <div class="col-md-5 border m-2 p-3">
      <h2 class="text-center">Share</h2>
      <div class="row justify-content-center">
        <div class="col-auto">
          <i class="fab fa-facebook me-3"></i>
          <i class="fab fa-twitter me-3"></i>
          <i class="fab fa-pinterest me-3"></i>
          <i class="far fa-envelope"></i>
        </div>
      </div>
    </div>
  </div>
</div>
