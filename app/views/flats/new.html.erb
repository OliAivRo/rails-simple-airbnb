<h1>New flat</h1>

<%= form_with model: @flat, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group mt-2">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-2">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-2">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

    <div class="form-group mt-2">
    <%= f.label :price_per_night, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price_per_night, class: "form-control" %>
    </div>
  </div>

      <div class="form-group mt-2">
    <%= f.label :number_of_guests, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :number_of_guests, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-4">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
