<div class="container mt-3">
  <h1>All our <%= @flats.count %> flats!</h1>
  <div class="row mt-2">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><strong><%= flat.name %></strong></h5>
            <p class="card-text"><%= flat.address %></p>
            <div class="row">
              <div class="col">
                <i class="fa-solid fa-users me-1"></i><%= flat.number_of_guests %> guests
              </div>
              <div class="col">
                <i class="fa-solid fa-euro-sign me-1"></i><%= flat.price_per_night %> per night
              </div>
            </div>
          </div>
          <div class="card-body">
            <%= link_to "See more", flat_path(flat), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
